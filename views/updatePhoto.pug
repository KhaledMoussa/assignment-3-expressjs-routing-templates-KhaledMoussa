.row
  .col-md-6.col-md-offset-3
    p Title: #{photo.title}
    p Description: #{photo.description}
    img(src=photo.imageurl, width= "250")
    form(method='POST' action="/photos/"+photo._id)
      div.form-group
        label(for='name') post title:
        input#name.form-control(type='text', value= photo.title name='title')
      div.form-group
        label(for='email') Quote from the Homeric Literature:
        input#email.form-control(type='text', value= photo.description name='description')
      div.form-group
        label(for='image') image url:
        input#imageurl.form-control(type='text', value= photo.imageurl name='imageurl')
      button.btn.btn-primary(type='submit') Update
      form(method='POST' action="/photos/"+photo._id+"/delete")
        button.btn.btn-primary(type='submit') Delete
